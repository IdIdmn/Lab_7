<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/curMatchNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="Match №1"
            android:textAlignment="center"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="287dp"
            tools:layout_editor_absoluteY="33dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/firstPlayer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/winner"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:text="Player1"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="33dp" />

            <TextView
                android:id="@+id/secondPlayer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/loser"
                android:gravity="end|center"
                android:paddingStart="0dp"
                android:paddingEnd="20dp"
                android:text="Player2"
                tools:layout_editor_absoluteX="287dp"
                tools:layout_editor_absoluteY="33dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/startDatetime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="end|center"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="15:00  01.01.2024"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="33dp" />

            <TextView
                android:id="@+id/gap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="  —  "
                tools:layout_editor_absoluteX="287dp"
                tools:layout_editor_absoluteY="33dp" />

            <TextView
                android:id="@+id/endDatetime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="start|center"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="17:00  01.01.2024"
                tools:layout_editor_absoluteX="287dp"
                tools:layout_editor_absoluteY="33dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>